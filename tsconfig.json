{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",

    "strict": true,
    "skipLibCheck": true,
    
    "strictPropertyInitialization": false,

    "resolveJsonModule": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}